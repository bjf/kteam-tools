#!/bin/bash

if [ "$#" -lt 5 -o "$#" -gt 6 ]; then
	echo "Usage: $0 <group> <name> <title> <warn> <alert> [<note>]" 1>&2
	exit 1
fi
group="$1"
name="$2"
title="$3"
warn="$4"
alert="$5"
note="$6"

# Fix the group and description.
group=`echo "$group" | sed -e 's/%/%p/g' -e 's/ /%s/g'`
title=`echo "$title" | sed -e 's/%/%p/g' -e 's/ /%s/g'`

# Make a simple update.
echo "$group `uname -n` $title `date +%s` $warn $alert $note" | "$0-bulk" "$name"
