#!/bin/bash

case "$1" in
kernel-uploads)
    (cd /srv/kernel.ubuntu.com/www/kpi  &&
    "python $HOME/kteam-tools/kpi/kernel-uploads.py" >kernel-uploads.txt &&
    curl -i -XPOST 'http://influxdb.cloud.kpi.internal:8086/write?db=kernel' --data-binary '@kernel-kernel-uploads.txt' --netrc-file $HOME/.influx-kernel.auth)
    ;;
azure-kernel)
    (cd /srv/kernel.ubuntu.com/www/kpi  &&
    "python $HOME/kteam-tools/kpi/azure-kernel.py" >azure-kernel.txt &&
    curl -i -XPOST 'http://influxdb.cloud.kpi.internal:8086/write?db=kernel' --data-binary '@azure-kernel.txt' --netrc-file $HOME/.influx-kernel.auth)
    ;;
esac
